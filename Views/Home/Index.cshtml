@{
    ViewData["Title"] = "Home";
}

@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}
<!--                    Utils               -->
<div class="modal" tabindex="-1" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Insert your user name</h5>
            </div>
            <div class="modal-body">
                <div class="mb-3 row">
                    <label for="userInput" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="userName">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="saveName" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Alert</strong>
            <small>Just now</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMsg">
        </div>
    </div>
</div>
<!--                        Main                    -->
<div class="row mt-5">
    <div class="col-5">
        <div class="container p-5">
            <input type="hidden" class="form-control" id="userInput">
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="messageInput" placeholder="Message">
                </div>
            </div>

            <input type="button" id="sendButton" value="Send Message" class="btn btn-primary" />
        </div>
        <div class="row p-1">
            <div class="col-12">
                <ul id="messagesList">
                    <li class="list-group-item active" aria-current="true">Messages</li>
                </ul>
            </div>
        </div>
    </div>
</div>
